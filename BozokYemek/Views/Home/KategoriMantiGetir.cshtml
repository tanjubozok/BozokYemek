@model IEnumerable<BozokYemek.Deytabeyz.Manti>

@{
    ViewBag.Title = "KategoriMantiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-12 col-md-6">
        <div class="single-post wow fadeInUp" data-wow-delay=".6s">
            <div class="post-thumb">
                <img src="~/@item.Resim" alt="">
            </div>
            <div class="post-content">
                <div class="post-meta d-flex">
                    <div class="post-author-date-area d-flex">
                        <div class="post-author">
                            <span class="fa fa-user"></span>
                            <a href="@Url.Action("Profil","Kullanici", new { id=item.Kullanici.Id})">
                                @string.Format("{0} {1}", item.Kullanici.Adi, item.Kullanici.Soyadi)
                            </a>
                        </div>
                        <div class="post-date">
                            <span class="fa fa-clock-o"></span>
                            <span>@item.EklemeTarihi</span>
                        </div>
                    </div>
                    <div class="post-comment-share-area d-flex">
                        <div class="post-favourite">
                            <i class="fa fa-comment" aria-hidden="true"></i>
                            @item.Yorum.Count()
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("MantiGetir","Home",new { id=item.Id})">
                    <h4 class="post-headline">
                        @item.Baslik
                    </h4>
                </a>
            </div>
        </div>
    </div>
}

