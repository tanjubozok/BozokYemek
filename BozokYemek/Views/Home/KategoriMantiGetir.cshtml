@model IEnumerable<BozokYemek.Deytabeyz.Manti>

@{
    ViewBag.Title = "KategoriMantiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-12 col-md-6">
        <div class="single-post wow fadeInUp" data-wow-delay=".6s">
            <div class="post-thumb">
                <img src="~/@item.Resim" alt="">
            </div>
            <div class="post-content">
                <div class="post-meta d-flex">
                    <div class="post-author-date-area d-flex">
                        <div class="post-author">
                            <a href="#">@string.Format("{0} {1}", item.Kullanici.Adi, item.Kullanici.Soyadi)</a>
                        </div>
                        <div class="post-date">
                            <a href="#">@item.EklemeTarihi</a>
                        </div>
                    </div>
                    <div class="post-comment-share-area d-flex">
                        <div class="post-favourite">
                            <a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i> 10</a>
                        </div>
                        <div class="post-comments">
                            <a href="#"><i class="fa fa-comment-o" aria-hidden="true"></i> 12</a>
                        </div>
                        <div class="post-share">
                            <a href="#"><i class="fa fa-share-alt" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("MantiGetir","Home",new { id=item.Id})">
                    <h4 class="post-headline">@item.Baslik</h4>
                </a>
            </div>
        </div>
    </div>
}

