@using BozokYemek.Deytabeyz
@model List<Kategori>

<div class="single-widget-area popular-post-widget">

    <div class="widget-title text-center">
        <h6>Kategoriler</h6>
    </div>

    @foreach (var item in Model)
    {
        <div class="single-populer-post d-flex">
            <img src="~/Resim/manti-1.png" />
            <div class="post-content">
                <a href="@Url.Action("KategoriMantiGetir","Home", new { id=item.Id})">
                    <h6>@item.Adi (@item.Manti.Count)</h6>
                </a>
                <p>@item.EklemeTarihi</p>
            </div>
        </div>
    }

</div>
