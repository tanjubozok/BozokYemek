@model BozokYemek.Deytabeyz.Kategori

@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kategori</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Kategori Adi", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Adi, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kategori Aciklama", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <button type="submit" class="btn btn-success">
                    <span class="fa fa-save"></span>
                    Kaydet
                </button>

                <a href="@Url.Action("Index","Kategori")" class="btn btn-default">
                    <span class="fa fa-arrow-circle-left"></span>
                    Listeye Geri Don
                </a>
            </div>
        </div>

    </div>
}
