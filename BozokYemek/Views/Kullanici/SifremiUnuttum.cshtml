
@{
    ViewBag.Title = "SifremiUnuttum";
    Layout = "~/Views/Shared/_LayoutGirisKayitOl.cshtml";
}

<div class="contact-form-area">
    <div class="row">

        <div class="col-12 col-md-5">
            <div>
                <img src="~/AdminContext/img/bg-img/contact.jpg" class="contact-form-sidebar item wow fadeInUpBig" data-wow-delay="0.3s" />
            </div>
        </div>

        <div class="col-12 col-md-7 item">
            <div class="contact-form wow fadeInUpBig" data-wow-delay="0.6s">
                <h2 class="contact-form-title mb-30">
                    <div class="text-center">Manti Sitesi !</div>
                    <div class="text-center">sifremi unuttum sayfasina hosgeldiniz</div>
                    @if (ViewBag.SifremiUnuttumHata != null && string.IsNullOrEmpty((string)ViewBag.SifremiUnuttumHata) == false)
                    {
                        <span class="text-danger">@ViewBag.SifremiUnuttumHata</span>
                    }
                </h2>

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <input type="email" name="eposta" id="eposta" placeholder="eposta adresiniz" class="form-control" required="required">
                    </div>

                    <div class="form-group">

                        <button type="submit" class="btn btn-success pull-right">
                            <span class="fa fa-first-order"></span>
                            Sifremi Unuttum
                        </button>

                        <a href="@Url.Action("Giris","Kullanici")" class="btn btn-primary">
                            <span class="fa fa-sign-in"></span>
                            Giris
                        </a>

                        <hr />

                        <a href="@Url.Action("Index","Home")" class="btn btn-default">
                            <span class="fa fa-home"></span>
                            Anasayfa
                        </a>




                    </div>
                }

            </div>
        </div>
    </div>
</div>
